<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    tools:context=".views.fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/homepage_logo" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EAFEF1"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="5dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="عدد المفردات في المعجم"
                        android:textColor="@color/navigationBarColor"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/total_in_dict_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="16dp"
                        android:text=""
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="10dp"
                        android:text="شارك في بناء المعجم!" />

                    <Button
                        android:id="@+id/home_add_word_botton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_corners"
                        android:text="اضف مفردة"
                        android:textColor="@color/windowBackground" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="10dp"
                        android:text="كلمة اليوم"
                        android:textColor="@color/navigationBarColor"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/word_of_the_day"
                        android:layout_width="150dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:background="@drawable/word_of_the_day_bg"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textSize="30sp" />

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingTop="5dp"
                    android:text="اخبار"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="horizontal">

                <FrameLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_right"
                        android:layout_width="match_parent"
                        android:scaleType="fitCenter"
                        android:layout_height="190dp"
                        tools:src="@drawable/homepage_logo" />

                    <TextView
                        android:id="@+id/leftImageViewText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="#AA000000"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:gravity="center"
                        android:textColor="@color/windowBackground"
                        android:textStyle="bold"
                        tools:text="fgdfhfdhdsfhdfhdsfhfdhdfhfdhdsfhfdshds" />

                </FrameLayout>

                <FrameLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_left"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:scaleType="fitCenter"
                        tools:src="@drawable/homepage_logo" />


                    <TextView
                        android:id="@+id/rightImageViewText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="#AA000000"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/windowBackground"
                        android:textStyle="bold"
                        />


                </FrameLayout>


            </LinearLayout>


            <ImageView
                android:layout_width="200dp"
                android:layout_height="70dp "
                android:id="@+id/bottom_logo"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/dm_logo" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="بلدية دبي © 2016. جميع الحقوق محفوظة "
                android:textColor="@color/colorPrimaryDark" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>
